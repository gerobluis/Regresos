<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/comeback_tab_bg"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/shipmenttab1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_bg"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/miscargas" />

            <com.regresos.utils.CustomFontTextView
                style="@style/ComebackTabText"
                android:padding="5dp"
                android:text="@string/mis_cargas" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shipmenttab2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_bg"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/publicar_carga" />

            <com.regresos.utils.CustomFontTextView
                style="@style/ComebackTabText"
                android:padding="5dp"
                android:text="@string/pub_cargas" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shipmenttab3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tab_bg"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/regreso" />

            <com.regresos.utils.CustomFontTextView
                style="@style/ComebackTabText"
                android:padding="5dp"
                android:text="@string/buscar_regreso" />
        </LinearLayout>
    </LinearLayout>
    <FrameLayout 
        android:id="@+id/shipment_tab_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></FrameLayout>

</LinearLayout>
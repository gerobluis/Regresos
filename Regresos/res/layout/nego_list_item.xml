<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bg_list_item"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/list_item_pic_carga"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_centerVertical="true"
            android:src="@drawable/image_home" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="#06b3c7"
            android:src="@drawable/calificar_button" />

        <com.regresos.utils.CustomFontTextView
            android:id="@+id/tv_title"
            style="@style/BlackTextBold"
            android:layout_toRightOf="@+id/list_item_pic"
            android:text="Viaji de Sonora a Mty" />

        <com.regresos.utils.CustomFontTextView
            android:id="@+id/tv_sub_title"
            style="@style/ListItemText"
            android:layout_below="@+id/tv_title"
            android:layout_toRightOf="@+id/list_item_pic"
            android:paddingLeft="5dp"
            android:text="Pataforma - Torton" />
        
        <com.regresos.utils.CustomFontTextView
            android:id="@+id/tv_cost"
            style="@style/ListItem"
            android:layout_below="@+id/tv_sub_title"
            android:layout_toRightOf="@+id/list_item_pic"
            android:paddingLeft="5dp"
            android:text="Total : $ 1000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_cost"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/next"
            android:layout_toRightOf="@+id/list_item_pic"
            android:orientation="vertical"
            android:paddingLeft="5dp" >

            <com.regresos.utils.CustomFontTextView
                style="@style/ListItem"
                android:text="Salida: Hermosillo Sanora" />

            <com.regresos.utils.CustomFontTextView
                style="@style/ListItem"
                android:text="Salida: EI 25-11-2013" />

            <com.regresos.utils.CustomFontTextView
                style="@style/ListItem"
                android:layout_marginTop="5dp"
                android:text="Entrega: Monterrey Nuevo Leon" />

            <com.regresos.utils.CustomFontTextView
                style="@style/ListItem"
                android:text="Entrega: EI 25-11-2013" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
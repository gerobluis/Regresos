<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_line"
            android:orientation="vertical"
            android:padding="5dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <com.regresos.utils.CustomFontTextView
                    style="@style/ListItem"
                    android:text="Estatus:" />

                <com.regresos.utils.CustomFontTextView
                    android:id="@+id/lbl_status"
                    style="@style/ListItem"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E2E1E0" >

                <com.regresos.utils.CustomFontTextView
                    android:id="@+id/tv_detail_title"
                    style="@style/BlackText"
                    android:text="Viaji de Sonora a Mty" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF" >

                <com.regresos.utils.CustomFontTextView
                    android:id="@+id/tv_origin"
                    style="@style/BlackText"
                    android:text="Origen: Hermosilo, Sonora" />

                <com.regresos.utils.CustomFontTextView
                    android:id="@+id/tv_destination"
                    style="@style/BlackText"
                    android:layout_below="@+id/tv_origin"
                    android:text="Destino: Hermosilo, Sonora" />

                <ImageView
                  
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/next2" />
            </RelativeLayout>

            <com.regresos.utils.CustomFontButton
                android:id="@+id/btn_ver_ofertas"
                style="@style/CustomButton"
                android:layout_marginTop="10dp"
                android:text="@string/btn_ver_ofertas_txt" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_margin="10dp"
            android:contentDescription="@string/app_name"
            android:maxHeight="@dimen/height_foto_carga"
            android:maxWidth="@dimen/width_foto_carga"
            android:scaleType="fitXY"
            android:src="@drawable/carga_general_big" />

        <com.regresos.utils.CustomFontTextView
            style="@style/BlackTextBold"
            android:layout_marginTop="5dp"
            android:text="Detalle de la Empresa" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_line"
            android:orientation="vertical"
            android:padding="5dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E2E1E0" >

                <com.regresos.utils.CustomFontTextView
                    style="@style/BlackText"
                    android:text="Transporte Garza" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF" >

                <com.regresos.utils.CustomFontTextView
                    android:id="@+id/tv_date1"
                    style="@style/BlackText"
                    android:text="Fecha de Salida: 12/12/12" />

                <com.regresos.utils.CustomFontTextView
                    android:id="@+id/tv_date2"
                    style="@style/BlackText"
                    android:layout_below="@+id/tv_date1"
                    android:text="Fecha de Llegada : 12/12/12" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFF" >

                <com.regresos.utils.CustomFontTextView
                    style="@style/BlackText"
                    android:text="Ancho" />

                <com.regresos.utils.CustomFontTextView
                    android:id="@+id/lbl_ancho"
                    style="@style/BlackText"
                    android:text="" />

                <com.regresos.utils.CustomFontTextView
                    style="@style/BlackText"
                    android:text="Alto" />

                <com.regresos.utils.CustomFontTextView
                    android:id="@+id/lbl_alto"
                    style="@style/BlackText"
                    android:text="" />

                <com.regresos.utils.CustomFontTextView
                    style="@style/BlackText"
                    android:text="Largo" />

                <com.regresos.utils.CustomFontTextView
                    android:id="@+id/lbl_largo"
                    style="@style/BlackText"
                    android:text="" />

                <com.regresos.utils.CustomFontTextView
                    style="@style/BlackText"
                    android:text="Peso" />

                <com.regresos.utils.CustomFontTextView
                    android:id="@+id/lbl_peso"
                    style="@style/BlackText"
                    android:text="" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_line"
            android:orientation="vertical"
            android:padding="5dp" >

            <com.regresos.utils.CustomFontTextView
                style="@style/BlackTextBold"
                android:text="Descripcion de la carga" />

            <com.regresos.utils.CustomFontTextView
                android:id="@+id/tv_desc"
                style="@style/BlackText"
                android:inputType="text" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>